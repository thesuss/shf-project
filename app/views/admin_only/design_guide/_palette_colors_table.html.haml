:css

  #color-palette h4.dguide-section {
    margin-top: 2rem;
  }


  .color-ex-cell {
    text-align: center;
    vertical-align: top;
    border-top: #ced4da solid 1pt;
    border-bottom: #ced4da solid 1pt;
  }

  p.color-ex {
    font-size: smaller;
    text-align: center;
    line-height: 1.1em;
    padding-top: 0;
    margin-top: 0;
  }

  button.color-ex {
    border-radius: 0;
    border: none;
    height: 27px;
    width: 44px;
    margin: 0.5rem 0.5rem 0.2rem 0.5rem ;
    padding-bottom: 0;
  }


