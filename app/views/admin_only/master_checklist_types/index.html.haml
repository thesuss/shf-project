%header.entry-header
  = content_title(t('.title'), user: current_user)

.entry-content

  %table.table.table-hover.table-sm#membership-checklist-types
    %thead
      %tr
        %th.name= t('.name')
        %th.description=  t('.description')
        %th
        %th

    %tbody
      - @admin_only_master_checklist_types.each do |admin_only_master_checklist_type|
        %tr
          %td= link_to admin_only_master_checklist_type.name, admin_only_master_checklist_type
          %td= link_to admin_only_master_checklist_type.description, admin_only_master_checklist_type

          %td= link_to icon('fas', 'edit'), edit_admin_only_master_checklist_type_path(admin_only_master_checklist_type)
          %td= link_to icon('fas', 'trash', class: 'delete'), admin_only_master_checklist_type,
            method: :delete,
            :data => { confirm: t('.delete_confirm', name: admin_only_master_checklist_type.name) }

  %hr
    .text-center
      = link_to t('.new_master_checklist_type'), new_admin_only_master_checklist_type_path, class: 'btn btn-sm btn-light new-master-checklist-type', id: 'new-master-checklist-type'
