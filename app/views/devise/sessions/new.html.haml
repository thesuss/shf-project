%header.entry-header
  = content_title(t('.title'), user: current_user)
.entry-content
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-group
      = f.label :email, class: 'required'
      = f.email_field :email, placeholder: "#{t('activerecord.attributes.user.email')}", autofocus: true,  class: 'form-control'
    .form-group
      = f.label :password, class: 'required'
      = f.password_field :password, autocomplete: 'off',  class: 'form-control'
    - if devise_mapping.rememberable?
      .form-group
        .form-check
          = f.check_box(:remember_me)
          = f.label :remember_me, "#{t('.remember_me')}", class: 'form-check-label'
    .actions
      = f.submit "#{t('.submit_button_label')}", class: 'btn btn-primary mb-2 form-control'
  = render 'application/required_fields'
  %hr
  = render 'devise/shared/links'
